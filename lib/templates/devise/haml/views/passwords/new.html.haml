%section.devise-passwords.new
  %header.devise-passwords.new
    %h1= t ".title", :default => "Forgot your password?"

  = semantic_form_for resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post} do |form|
    = devise_error_messages!

    = form.inputs do
      = form.input :email

    = form.actions do
      = form.action :submit, label: "Send me reset password instructions"

  %footer
    = render "footer"
